<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.postweb.mapper.PostMapper">
	<insert id="registPost" parameterType="com.postweb.domain.PostDTO" useGeneratedKeys="true" keyProperty="postNo">
		insert into posts(post_title, post_content, post_hit) 
		value (#{postTitle}, #{postContent}, 0)
	</insert>
	
	<select id="getAllPosts" resultType="com.postweb.domain.PostDTO">
		select * from posts
		order by post_reg_date DESC
	</select>
	
	<select id="getPostDetail" parameterType="long" resultType="com.postweb.domain.PostDTO">
		select * from posts
		where post_no = #{postNo}
	</select>
	
	<delete id="deletePost" parameterType="long">
		delete from posts
		where post_no = #{postNo}
	</delete>
	
	<update id="updatePost" parameterType="com.postweb.domain.PostDTO">
		update posts
	    set post_title = #{postTitle},
	        post_content = #{postContent}
	    where post_no = #{postNo}
	</update>
</mapper>